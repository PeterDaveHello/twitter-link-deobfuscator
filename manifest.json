{
  "manifest_version": 2,
  "name": "Twitter Link Deobfuscator",
  "version": "0.4.1",

  "author": "Alin Pasol",
  "homepage_url": "https://github.com/theAlinP/twitter-link-deobfuscator",
  "description": "Reveals the real destination of the links and Twitter Cards from tweets as well as from replies, which are usually concealed using shortened URLs. The extension only activates while browsing twitter.com.",
  "content_scripts": [
    {
      "exclude_matches": [
        "*://help.twitter.com/*"
      ],
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": [
        "scripts/content_script.js"
      ],
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/TLD_icon_enabled-32.png",
      "48": "icons/TLD_icon_enabled-48.png",
      "64": "icons/TLD_icon_enabled-64.png",
      "96": "icons/TLD_icon_enabled-96.png",
      "128": "icons/TLD_icon_enabled-128.png"
    },
    "default_title": "Twitter Link Deobfuscator - ENABLED"
  },
  "icons": {
    "32": "icons/TLD_icon_enabled-32.png",
    "48": "icons/TLD_icon_enabled-48.png",
    "64": "icons/TLD_icon_enabled-64.png",
    "96": "icons/TLD_icon_enabled-96.png",
    "128": "icons/TLD_icon_enabled-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{d820ea6b-de81-4b11-ad1f-832314b8a49f}"
    }
  },
  "background": {
    "scripts": ["scripts/background_script.js"]
  },
  "permissions": ["storage"]
}
