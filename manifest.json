{
  "manifest_version": 2,
  "name": "Twitter Link Deobfuscator",
  "version": "0.1.0",

  "author": "Alin Pasol",
  "homepage_url": "https://github.com/theAlinP/twitter-link-deobfuscator",
  "description": "Reveals the real destination of the links from tweets, which are usually concealed using shortened URLs. The extension only activates while browsing twitter.com.",
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "icons/TLD_icon_enabled-32.png",
      "48": "icons/TLD_icon_enabled-48.png",
      "64": "icons/TLD_icon_enabled-64.png",
      "96": "icons/TLD_icon_enabled-96.png",
      "128": "icons/TLD_icon_enabled-128.png"
    },
    "default_title": "Twitter Link Deobfuscator - ENABLED"
  },
  "icons": {
    "32": "icons/TLD_icon_enabled-32.png",
    "48": "icons/TLD_icon_enabled-48.png",
    "64": "icons/TLD_icon_enabled-64.png",
    "96": "icons/TLD_icon_enabled-96.png",
    "128": "icons/TLD_icon_enabled-128.png"
  }
}
